<div class="site-index">
    <h1>Options</h1>
    <p>
        <a href="<?php echo $this->url('options/default',
            array(
                'controller' => 'management',
                'action' => 'create')
        );?>"
           class="btn btn-success">Create</a>
    </p>

    <table class="table table-hover grid">
        <thead>
        <tr>
            <th width="160px">Namespace</th>
            <th>Key</th>
            <th>Value</th>
            <th>Description</th>
            <th width="160px">Created</th>
            <th width="160px">Updated</th>
            <th width="200px">Controls</th>
        </tr>
        </thead>
        <tbody>

        <?php if(empty($options)): ?>
            <h3>There are no options yet</h3>
        <?php endif ;?>

        <?php foreach($options as $option): ?>
            <tr>
                <td>
                    <a href="<?php echo $this->url('options/default',
                        array(
                            'controller' => 'management',
                            'action' => 'view',
                            'namespace' => $option->getNamespace(),
                            'key' => $option->getKey())
                    ); ?>">
                        <?php echo $this->escapeHtml($option->getNamespace()) ;?>
                    </a>
                </td>
                <td><?php echo $this->escapeHtml($option->getKey()) ;?></td>
                <td><?php echo $this->escapeHtml($option->getValue()) ;?></td>
                <td><?php echo $this->escapeHtml($option->getDescription()) ;?></td>
                <td><?php echo $this->escapeHtml($option->getCreated()->format('Y-m-d H:i:s')) ;?></td>
                <td><?php echo $this->escapeHtml($option->getUpdated()->format('Y-m-d H:i:s')) ;?></td>
                <td class="controls">
                    <a href="<?php echo $this->url('options/default',
                        array(
                            'controller' => 'management',
                            'action' => 'edit',
                            'namespace' => $option->getNamespace(),
                            'key' => $option->getKey())
                    ); ?>"
                       class="btn btn-default btn-small">
                        Edit
                    </a>
                    <a href="<?php echo $this->url('options/default',
                        array(
                            'controller' => 'management',
                            'action' => 'delete',
                            'namespace' => $option->getNamespace(),
                            'key' => $option->getKey())
                    ); ?>"
                       class="btn btn-danger btn-small">
                        Delete
                    </a>
                </td>
            </tr>
        <?php endforeach; ?>
        </tbody>
    </table>

</div>